{% extends "admin/baseAdmin.html.twig" %}

{% block title %}Blog - ajout articles
{% endblock %}

{% block body %}

	<h1 class="text-center">
		ajout Articles</h1>
	{% if session.error is defined %}
		<div style="color:red;">
			{{session.error}}
		</div>
	{% endif %}

	<form action="index.php?path=adminPost/addPost" method="POST" enctype="multipart/form-data">
		<div class="form-group">
			<label for="title">titre *</label>
			<input type="text" class="form-control" name="title" {% if info.title is defined %} value="{{info.title}}" {% endif %}>
		</div>
		<div class="form-group">
			<label for="chapo">Chapo *</label>
			<input class="form-control" type="text" name="chapo" {% if info.chapo is defined %} value="{{info.chapo}}" {% endif %}>
		</div>
		<div class="form-group">
			<label for="auteur">Auteur *</label>
			<input class="form-control" type="text" name="auteur" {% if info.auteur is defined %} value="{{info.auteur}}" {% endif %}>
		</div>
		<div class="form-group">
			<label for="content">Contenue
			</label>
			<textarea class="form-control" id="Article_editor" name="content" rows="3">
				{% if info.content is defined  %}
					{{info.content}}
				{% endif %}
			</textarea>
		</div>
		<div class="form-group pt-2">
			<div>
				<label for="file">image a la une *
				</label>
			</div>
			<input type="file" class="form-control-file" name="file">
		</div>

		<div class="form-check pt-3">
			<input type="checkbox" {% if info.isPublished is defined %} checked {% endif %} class="form-check-input" name="isPublished">
			<label class="form-check-label" for="isPublished">Metre l'article en ligne</label>
		</div>

		<div class="pt-5">
			<button type="submit" class="btn btn-primary">Ajouter</button>
		</div>
	</form>

{% endblock %}
