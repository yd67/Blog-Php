{% extends "admin/baseAdmin.html.twig" %}

{% block title %}Blog - Modifier articles
{% endblock %}

{% block body %}

	<h1 class="text-center">
		Modifier Articles</h1>

	<form action="index.php?path=adminPost/updatePost/{{post.id}}" method="POST" enctype="multipart/form-data">
		<div class="form-group">
			<label for="title">titre *</label>
			<input type="text" class="form-control" name="title" value="{{post.title}}">
		</div>
		<div class="form-group">
			<label for="chapo">Chapo *</label>
			<input class="form-control" type="text" name="chapo" value="{{post.chapo}}">
		</div>
		<div class="form-group">
			<label for="auteur">Auteur *</label>
			<input class="form-control" type="text" name="auteur" value="{{post.auteur}}">
		</div>
		<div class="form-group">
			<label for="content">Contenue
			</label>
			<textarea class="form-control" id="Article_editor" name="content" rows="3">
				{{post.content}}
			</textarea>
		</div>
		<div class="form-group pt-2">
			<div>
				<label for="file">image a la une *
				</label>
			</div>
			<input type="file" class="form-control-file" name="file">
		</div>

		<p>En ligne</p>
		<div class="form-check form-check-inline ">
			<input class="form-check-input" type="radio" name="isPublished" id="inlineRadio1" value="1" {% if post.isPublished == true %} checked {% endif %}>
			<label class="form-check-label" for="inlineRadio1">oui
			</label>
		</div>
		<div class="form-check form-check-inline">
			<input class="form-check-input" type="radio" name="isPublished" id="inlineRadio2" value="0" {% if post.isPublished == false %} checked {% endif %}>
			<label class="form-check-label" for="inlineRadio2">non</label>
		</div>

		<div class="pt-5">
			<button type="submit" class="btn btn-primary">Modifier</button>
		</div>
	</form>

{% endblock %}
