{% extends "admin/baseAdmin.html.twig" %}

{% block title %}Blog - ajout articles
{% endblock %}

{% block body %}

	<h1 class="text-center p-3">ajouter un  articles</h1>
	{% if session.error is defined %}
		<div style="color:red;">
			{{session.error}}
		</div>
	{% endif %}
<div class="container  mb-5">
	<form action="index.php?path=adminPost/addPost" method="POST" enctype="multipart/form-data">
		<div class="form-group">
			<label for="title">titre *</label>
			<input type="text" class="form-control" name="title" {% if info.title is defined %} value="{{info.title}}" {% endif %}>
		</div>
		<div class="form-group">
			<label for="chapo">Chapo *</label>
			<input class="form-control" type="text" name="chapo" {% if info.chapo is defined %} value="{{info.chapo}}" {% endif %}>
		</div>
		<div class="form-group">
			<label for="auteur">Auteur *</label>
			<input class="form-control" type="text" name="auteur" {% if info.auteur is defined %} value="{{info.auteur}}" {% endif %}>
		</div>
		<div class="form-group">
			<label for="content">Contenue
			</label>
			<textarea class="form-control" id="Article_editor" name="content" rows="3">
				{% if info.content is defined  %}
					{{info.content}}
				{% endif %}
			</textarea>
		</div>
		<div class="form-group pt-2">
			<div>
				<label for="file">image a la une *
				</label>
			</div>
			<input type="file" required class="form-control-file" name="file">
		</div>

		<p>En ligne</p>
		<div class="form-check form-check-inline ">
			<input class="form-check-input" type="radio" name="isPublished" id="inlineRadio1" value="1" {% if info.isPublished == true %} checked {% endif %}>
			<label class="form-check-label" for="inlineRadio1">oui
			</label>
		</div>
		<div class="form-check form-check-inline">
			<input class="form-check-input" type="radio" name="isPublished" id="inlineRadio2" value="0" {% if info.isPublished == false %} checked {% endif %}>
			<label class="form-check-label" for="inlineRadio2">non</label>
		</div>

		<div class="pt-5 d-flex justify-content-center">
			<button type="submit" class="btn btn-outline-dark">Ajouter</button>
		</div>
	</form>
</div>
{% endblock %}
